<Window x:Class="game.GameOver"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:game"
        mc:Ignorable="d"
        WindowStyle="none"
        Title="GameOver" Height="100" Width="200">
    <Grid>
        <TextBlock x:Name="text" HorizontalAlignment="Center" TextWrapping="Wrap" Text="placeholder" VerticalAlignment="Center" Width="134" Margin="0,-30,0,0" TextAlignment="Center"/>
        <Button x:Name="ok" Click="OkClick" Content="OK" HorizontalAlignment="Center" Height="19" Margin="0,40,0,0" VerticalAlignment="Center" Width="50"/>
    </Grid>
</Window>
